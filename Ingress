apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ledgerd-ingress
  namespace: ledgerd
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/use-regex: "true"
    service.beta.kubernetes.io/aws-load-balancer-ssl-cert: "arn:aws:acm:ap-south-1:267048487300:certificate/ebfbfa83-8d85-46a7-970a-3599024ab23c"
spec:
  ingressClassName: nginx
  rules:
    - host: ledgerd.datasirpi.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: ledgerd-fe
                port:
                  number: 80
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: ledgerd-be
                port:
                  number: 8080
